# =============================================================================
# Puter.js Proxy Server - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Puter.js Authentication
# -----------------------------------------------------------------------------
# Get your free token from: https://puter.com/#/account
# This token is optional for basic testing but recommended for full access
PUTER_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the proxy server (default: 3333)
PORT=3333

# Node.js environment (development or production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log levels: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Optional: Rate Limiting
# -----------------------------------------------------------------------------
# Enable rate limiting (uncomment to enable)
# RATELIMIT_WINDOW_MS=60000
# RATELIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Optional: HTTPS Configuration
# -----------------------------------------------------------------------------
# For HTTPS server (see index-https.js)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
